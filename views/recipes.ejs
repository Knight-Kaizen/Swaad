<html>

<head>
    <title>Swaad</title>
    <link rel="stylesheet" href="/stylesheets/recipes.css">
</head>

<body>
    <div class="main">
        <div class="nav-container
            <% if(showRoutes == true) {%>
                increase-height
                <%}%>
            ">
            <div class="nav-logo">
                <div class="logo">Swaad</div>
                <form class="nav-routes" action="/recipes" method="post">
                    <button class="route-button">
                        <img class="hamburger" src="/Images/hamburger.png" alt="">
                    </button>
                </form>
            </div>
            <div class="nav-route-buttons 
                <% if(showRoutes == true) {%>
                    show-route-buttons
                    <%}%>
                    ">
                <div class="home-route">
                    <form action="/home" method="post" class="routes">
                        <button class="route-button">Home</button>
                    </form>
                </div>
                <div class="recipes-route">
                    <form action="/recipes" method="post" class="routes">
                        <button class="route-button">Recipes</button>
                    </form>
                </div>
                <div class="about-route">
                    <form action="/about" method="post" class="routes">
                        <button class="route-button">About</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="main-body">
            
                <% for(let key of recipeObj){ %>
                    <div class="recipeCard">
                        <div class="recipe-image">
                            <img src="./uploads/<%=key.img%>" alt="image">
                        </div>
                        <div class="recipe-name">
                            <%= key.name %>
                        </div>
                        <div class="recipe-description">
                            <%= key.description %>
                        </div>
                        <div class="recipe-ingredients">
                            <%= key.ingredients %>
                        </div>
                        <div class="recipe-steps">
                            <%= key.steps %>
                        </div>
                        <form action="/<%=key._id%>/edit" method="post">

                            <button class="modify">Modify</button>
                            <button class="delete" type="submit" formaction="/<%=key._id%>/delete" method="post">Delete</button>
                        </form>
                    </div>
               <% } %>
           
            
            
        </div>
    </div>
    <div class="modal">
        <div class="modal-container">
            <form action="/edit" method="post">
                <label for="">Name</label>
                <input type="text" name="name">
                <label for="">ingredients</label>
                <input type="text" name="ingredients">
                <button>Modify</button>
                <button type="submit" formaction="/recipes" method="post">Cancel</button>
            </form>
        </div>
    </div>
</body>

</html>